<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to Social Media Dashboard</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Parallax Background */
        .parallax {
            background-image: url('https://source.unsplash.com/1600x900/?technology,social-media');
            background-attachment: fixed;
            background-size: cover;
        }

        /* Gradient Background for Hero Section */
        .hero-gradient {
            background: linear-gradient(to right, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://source.unsplash.com/1600x900/?technology');
            background-position: center;
            background-size: cover;
        }
    </style>
</head>

<body class="bg-gray-100">

    <!-- Hero Section with Video Background -->
    <header class="hero-gradient text-white text-center py-32 relative">
        <video autoplay muted loop class="absolute top-0 left-0 w-full h-full object-cover z-0 opacity-40">
            <source src="your-video.mp4" type="video/mp4">
        </video>
        <div class="container mx-auto px-6 relative z-10">
            <h1 class="text-5xl font-bold mb-4">Welcome to Social Media Dashboard</h1>
            <p class="text-xl mb-6">Track your social media growth, analyze trends, and stay ahead of the competition.
            </p>
            <div class="flex justify-center gap-6">
                <a href="/v1/signup"
                    class="bg-red-500 text-white px-6 py-3 rounded-lg text-xl transform hover:scale-105 transition-all duration-300">Get
                    Started</a>
                <a href="/v1/login"
                    class="bg-blue-500 text-white px-6 py-3 rounded-lg text-xl transform hover:scale-105 transition-all duration-300">Login</a>
            </div>
        </div>
    </header>

    <!-- Animated Stats Section -->
    <section class="text-center py-16 bg-gray-200">
        <div class="container mx-auto px-6">
            <h2 class="text-3xl font-semibold mb-4">Join Over <span id="counter" class="text-red-500 text-4xl">0</span>
                Users</h2>
        </div>
    </section>

    <!-- Features Section with Icons -->
    <section class="features py-16">
        <div class="container mx-auto px-6 text-center">
            <h2 class="text-4xl font-semibold mb-8">Why Choose Us?</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
                <div
                    class="feature-item bg-white p-6 rounded-lg shadow-lg transform transition-all duration-300 hover:scale-105 hover:shadow-xl">
                    <img src="icon1.svg" alt="Track Growth" class="w-12 h-12 mx-auto mb-4">
                    <h3 class="text-2xl font-semibold mb-4">Track Growth</h3>
                    <p>Monitor your followers, likes, and engagement across multiple platforms.</p>
                    <div class="w-full bg-gray-300 h-2 mt-4 rounded-full">
                        <div class="bg-red-500 h-2 w-60% rounded-full"></div>
                    </div>
                </div>
                <div
                    class="feature-item bg-white p-6 rounded-lg shadow-lg transform transition-all duration-300 hover:scale-105 hover:shadow-xl">
                    <img src="icon2.svg" alt="Analyze Trends" class="w-12 h-12 mx-auto mb-4">
                    <h3 class="text-2xl font-semibold mb-4">Analyze Trends</h3>
                    <p>Get insights into your daily, weekly, and monthly performance.</p>
                    <div class="w-full bg-gray-300 h-2 mt-4 rounded-full">
                        <div class="bg-blue-500 h-2 w-75% rounded-full"></div>
                    </div>
                </div>
                <div
                    class="feature-item bg-white p-6 rounded-lg shadow-lg transform transition-all duration-300 hover:scale-105 hover:shadow-xl">
                    <img src="icon3.svg" alt="Secure & Reliable" class="w-12 h-12 mx-auto mb-4">
                    <h3 class="text-2xl font-semibold mb-4">Secure & Reliable</h3>
                    <p>Your data is safe with us, and we ensure top-notch security for your accounts.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="bg-gray-100 py-16">
        <div class="container mx-auto px-6 text-center">
            <h2 class="text-4xl font-semibold mb-8">What Our Users Say</h2>
            <div class="flex justify-center space-x-12">
                <div class="testimonial p-6 bg-white shadow-lg rounded-lg">
                    <p class="text-lg italic mb-4">"This platform helped me grow my social media following exponentially
                        in just a few months!"</p>
                    <p class="font-semibold">Jane Doe</p>
                    <p class="text-sm text-gray-500">Social Media Influencer</p>
                </div>
                <div class="testimonial p-6 bg-white shadow-lg rounded-lg">
                    <p class="text-lg italic mb-4">"The analytics tools are incredibly detailed and easy to use!"</p>
                    <p class="font-semibold">John Smith</p>
                    <p class="text-sm text-gray-500">Digital Marketer</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Newsletter Signup -->
    <section class="bg-gray-200 py-16">
        <div class="container mx-auto px-6 text-center">
            <h2 class="text-3xl font-semibold mb-4">Stay Updated</h2>
            <p class="text-xl mb-8">Subscribe to our newsletter for the latest updates, tips, and news.</p>
            <form class="flex justify-center gap-4">
                <input type="email" class="p-3 rounded-lg w-1/3" placeholder="Enter your email" required>
                <button type="submit" class="bg-red-500 text-white px-6 py-3 rounded-lg">Subscribe</button>
            </form>
        </div>
    </section>

    <!-- Floating CTA Button -->
    <button id="ctaBtn"
        class="fixed bottom-4 right-4 bg-red-500 text-white p-4 rounded-full shadow-lg transform hover:scale-105 transition-all duration-300">
        Get Started
    </button>

    <!-- Footer Section -->
    <footer class="bg-gray-800 text-white text-center py-6">
        <div class="container mx-auto px-6">
            <p>&copy; 2025 Social Media Dashboard. All rights reserved.</p>
        </div>
    </footer>

    <!-- Dark Mode Toggle -->
    <div class="fixed top-4 left-4 z-50">
        <button id="darkModeToggle" class="bg-gray-700 text-white p-2 rounded-lg">Toggle Dark Mode</button>
    </div>

    <!-- Scripts -->
    <script>
        // Animated Stats Counter
        const count = document.getElementById('counter');
        let countValue = 0;
        const target = 100000;

        function updateCount() {
            if (countValue < target) {
                countValue += Math.floor(target / 200);
                count.innerText = countValue;
                setTimeout(updateCount, 50);
            }
        }

        updateCount();

        // Dark Mode Toggle
        const darkModeToggle = document.getElementById('darkModeToggle');
        const body = document.body;
        darkModeToggle.addEventListener('click', () => {
            body.classList.toggle('bg-gray-900');
            body.classList.toggle('text-white');
        });

        // Floating CTA Button
        const ctaBtn = document.getElementById('ctaBtn');
        ctaBtn.addEventListener('click', () => {
            window.location.href = '/v1/signup';
        });
    </script>
</body>

</html>